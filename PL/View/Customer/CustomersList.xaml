<UserControl x:Class="PL.CustomersList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
             mc:Ignorable="d"
        Height="450" Width="800">
    <UserControl.DataContext>
        <local:ViewCustomerList/>
    </UserControl.DataContext>
    <Grid>
        <ListView  ItemsSource="{Binding ViewCustomers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding }">
                        <ContentControl.InputBindings>
                            <MouseBinding Gesture="LeftDoubleClick" 
                                                  Command="{Binding DataContext.OpenViewCustomerWindowCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                                  CommandParameter="{Binding }"/>
                        </ContentControl.InputBindings>
                    </ContentControl>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Command="{Binding  OpenAddCustomerWindow}" 
                Content="Add new customer"
                HorizontalAlignment="Left"
                Margin="622,268,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Height="90"
                Width="148">

        </Button>
    </Grid>
</UserControl>
