<Window x:Class="PL.Enter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Enter" Height="550" Width="1000">

    <Grid>
        <Grid.Background >
            <ImageBrush Stretch="Fill" ImageSource="./Images/background2png-01.png"></ImageBrush>
        </Grid.Background>
        <TextBlock Text="Enter code here!" Margin="80,150,150,150" FontSize="50" />
        <TextBox x:Name="Password" Margin="410,0,150,150" Width="300" Height="100"  FontSize="80" Text="{Binding CODE}" />
        <Button Content="OK" Width="100" Margin="415,267,485,216" Click="Button_Click"></Button>
    </Grid>
</Window>
